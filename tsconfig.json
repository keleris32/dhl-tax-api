{
	// https://www.typescriptlang.org/tsconfig#compilerOptions
	"compilerOptions": {
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["es2020"],
		"module": "es2022",
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"strict": true,
		"sourceMap": true,
		"target": "es2022",
		"types": ["node"],
		"outDir": "dist"
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
